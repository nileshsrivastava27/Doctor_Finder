<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Details">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="175dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:text="Doctor Details"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="412dp"
            android:layout_height="36dp"
            android:layout_marginTop="19dp"
            android:text="DOCTOR NAME"
            android:textAlignment="center"
            android:textColor="#505050"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="419dp"
            android:layout_height="386dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/doctor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/course"
            android:layout_width="156dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="49dp"
            android:text="Alumni Course"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.585"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/qualifications"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/branch"
            android:layout_width="156dp"
            android:layout_height="26dp"
            android:text="Alumni Branch"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/course"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            android:text="Category:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qualifications" />



        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="City:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/qualifications"
            android:layout_width="409dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text=" Qualifications"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/branch"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">


            <ImageButton
                android:id="@+id/call"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="call"
                android:scaleType="centerCrop"

                android:src="@drawable/phonecall" />


            <ImageButton
                android:id="@+id/sms"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="sms"
                android:scaleType="centerCrop"
                android:src="@drawable/message" />

            <ImageButton
                android:id="@+id/whatsapp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="whatsapp"
                android:scaleType="centerCrop"
                android:src="@drawable/whatsapp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="32dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:contentDescription="back"
            android:focusable="true"
            android:onClick="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>