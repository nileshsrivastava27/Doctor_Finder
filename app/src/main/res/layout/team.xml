<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC4C4">


    <TextView
        android:id="@+id/textView"
        android:layout_width="188dp"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:text="Team Xcoders"
        android:textColor="@color/black"
        android:textSize="60px"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/L1"
        android:orientation="horizontal"
        android:layout_below="@+id/textView">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_margin="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="51dp"
        android:contentDescription="nileshpic"
        android:src="@drawable/nilesh"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

    </ImageView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_margin="20dp"
        android:contentDescription="pranavpic"
        android:src="@drawable/pranav"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="122dp">

    </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/L1"
        android:id="@+id/L2">
    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:layout_marginLeft="15dp"
        android:inputType="textPersonName"
        android:text="Nilesh Srivastava"

       />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Adibatla Dutta"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/L3"
        android:orientation="horizontal"
        android:layout_below="@+id/L2">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:padding="13dp"
        android:text="20BCE10047"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:padding="13dp"
        android:text="20BCE10954"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="437dp" />
    </LinearLayout>

</RelativeLayout>